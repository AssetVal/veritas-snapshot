{
   "name": "veritas-snapshot",
   "version": "1.0.0",
   "engines": {
      "node": "15.12.0",
      "npm": "7.6.3"
   },
   "@comments scripts": {
      "dev": "develop with blazing fast rebuilds",
      "dev:features": "develop with features like SSR and serviceworker enabled",
      "build": "run build scripts below",
      "build:app": "build single page application (SPA)",
      "build:static": "Generate static pages",
      "serve": "serve content in 'dist' folder",
      "rollup": "run the rollup bundler",
      "nollup": "run the nollup no-bundler",
      "routify": "run routify"
   },
   "scripts": {
      "dev": "run-p routify nollup",
      "dev:ssr": "run-p routify rollup",
      "build": "run-s build:*",
      "build:app": "routify -b && rollup -c",
      "build:static": "spank",
      "serve": "spassr --ssr",
      "rollup": "rollup -cw",
      "nollup": "nollup -c",
      "routify": "routify",
      "validate": "svelte-check"
   },
   "devDependencies": {
      "@rollup/plugin-commonjs": "^19.0.0",
      "@rollup/plugin-node-resolve": "^13.0.0",
      "@rollup/plugin-typescript": "^8.2.1",
      "@roxi/routify": "^2.18.0",
      "@tsconfig/svelte": "^1.0.0",
      "@types/uuid": "^8.3.0",
      "@zerodevx/svelte-toast": "^0.3.0",
      "autoprefixer": "^10.2.5",
      "cross-env": "^7.0.2",
      "cssnano": "^5.0.2",
      "fs-extra": "^10.0.0",
      "nollup": "^0.16.3",
      "npm-run-all": "^4.1.5",
      "postcss": "^8.2.14",
      "postcss-import": "^14.0.1",
      "rollup": "^2.47.0",
      "rollup-plugin-hot": "^0.1.1",
      "rollup-plugin-livereload": "^2.0.0",
      "rollup-plugin-svelte": "^7.1.0",
      "rollup-plugin-svelte-hot": "^0.11.2",
      "rollup-plugin-terser": "^7.0.2",
      "rollup-plugin-workbox": "^6.1.1",
      "spank": "^1.5.1",
      "spassr": "^2.6.0",
      "svelte": "^3.38.2",
      "svelte-check": "^1.5.2",
      "svelte-popperjs": "^1.2.5",
      "svelte-preprocess": "^4.7.3",
      "tailwindcss": "^2.1.2",
      "tossr": "^1.3.1",
      "tslib": "^2.2.0",
      "typescript": "^4.2.4"
   },
   "routify": {
      "extensions": "svelte,html,svx,md"
   },
   "spassr": {},
   "spank": {
      "blacklist": [
         "/example/modal/basic/4"
      ]
   },
   "dependencies": {
      "@uppy/core": "^1.18.0",
      "@uppy/image-editor": "^0.2.4",
      "@uppy/svelte": "^0.1.8",
      "@uppy/webcam": "^1.8.9",
      "@uppy/xhr-upload": "^1.7.2",
      "sweetalert2": "^10.16.7",
      "uuid": "^8.3.2"
   }
}
